# Prerequisites:
# install mysql 
# install rvm, ruby, rails

# stage appname, rootpw, 


# Create directory appname in ~/workspace
mkdir ~/workspace/$appname

# generate rails project appname
rails -d mysql $appname

# launch mysql, create a database instance for appname_development, appname_test
mysql -u root -p $rootpw  <<EOT
create database bank_development
create database bank_test
exit
EOT

# check in as a GIT repository
git init .
git add .
git commit -m "Initial Commit"

# Status, Stash, Pull, Stash Apply, resolve merge conflicts, Push the GIT repository
